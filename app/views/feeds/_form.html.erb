<%= form_with(model: [collection, feed], local: true) do |form| %>
  <% if feed.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
        <% feed.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
    <div class="form-text">A descriptive name for this feed</div>
  </div>

  <div class="field mb-3">
    <%= form.label :url %>
    <%= form.text_field :url, class: 'form-control' %>
    <div class="form-text">The URL of the RSS/Atom feed (e.g., https://example.com/feed.xml)</div>
  </div>

  <div class="field mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="field mb-3 form-check">
    <%= check_box_tag :fetch_now, '1', true, class: 'form-check-input' %>
    <%= label_tag :fetch_now, 'Fetch feed content immediately', class: 'form-check-label' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %> 