<h1><%= @collection.name %></h1>

<%= link_to "Back", collections_path %>
<%= link_to "Edit", edit_collection_path(@collection) %>
<%= button_to "Delete", @collection, method: :delete, data: { turbo_confirm: "Are you sure?" } %>

<div class="collection-feeds">
  <h2>Feeds</h2>
  <p><%= link_to 'Manage Feeds', collection_feeds_path(@collection), class: 'btn btn-primary' %></p>
  
  <% if @collection.feeds.any? %>
    <ul class="feeds-list">
      <% @collection.feeds.each do |feed| %>
        <li>
          <%= link_to feed.title, content_collection_feed_path(@collection, feed) %>
          <small>
            (<%= link_to 'Manage', collection_feed_path(@collection, feed) %> | 
            <%= link_to 'RSS', collection_feed_path(@collection, feed, format: :rss) %>)
          </small>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No feeds yet. <%= link_to 'Add a feed', new_collection_feed_path(@collection) %></p>
  <% end %>
</div>
